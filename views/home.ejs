 
  <!-- Sidebar -->
  <div class="flex">
    <!-- Sidebar Section -->
    <div class="w-1/4  text-black  p-6">
      <h2 class="text-2xl font-semibold mb-8">Post App</h2>
     

      <!-- Create New Post Form inside Sidebar -->
      <div class="bg-white p-6 rounded-lg shadow-lg mt-8 max-w-xs mx-auto transform transition-all ease-in-out duration-300 hover:scale-105">
        <h2 class="text-xl font-semibold text-center text-indigo-600 mb-4">Create a New Post</h2>
        <form action="/posts" method="POST">
          <!-- Title Input -->
          <input type="text" name="title" placeholder="Post Title" class="w-full p-3 mb-4 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all ease-in-out duration-300" required>

          <!-- Content Textarea -->
          <textarea name="content" placeholder="Post Content" class="w-full p-3 mb-4 border-2 border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-all ease-in-out duration-300" required></textarea>

          <!-- Submit Button -->
          <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-md hover:bg-indigo-700 transform transition-all ease-in-out duration-300 hover:scale-105">Create Post</button>
        </form>
      </div>
    </div>

    <!-- Main Content Section -->
    <div class="w-3/4 p-8">
      <!-- Display All Posts -->
      <h2 class="text-2xl font-semibold mb-4">All Posts</h2>
      <div>
        <% posts.forEach(post => { %>
          <div class="bg-white p-6 rounded-lg shadow-md mb-6">
            <h3 class="text-xl font-semibold mb-2"><%= post.title %></h3>
            <p class="mb-4"><%= post.content %></p>
            <p class="text-gray-600">Author: <%= post.users.username %></p>

            <!-- Show Update and Delete Options Only for Post Author -->
            <% if (user && user.id === post.users._id.toString()) { %>
              <div class="mt-4">
                <a href="/posts/<%= post._id %>/edit" class="text-indigo-600 hover:text-indigo-800 mr-4">Edit</a>
                <a href="/posts/<%= post._id %>/delete" class="text-red-600 hover:text-red-800" onclick="return confirm('Are you sure you want to delete this post?')">Delete</a>
              </div>
            <% } %>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
